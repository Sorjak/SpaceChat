<!doctype html>
<html >
    <head>
        <title>SpaceChat | Map</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="mobile-web-app-capable" content="yes">
        <link href="/static/css/map.css" rel="stylesheet">
    </head>
    <body ng-app="SpaceChatMap">
        <div id="content">
            <div id="map-view" ng-controller="MapCtrl">

                <div id="map">

                </div>

                <div id="players">
                    <p>Player List</p>
                    <ul id="player-list">
                        <li ng-repeat="player in players">
                            <a ng-click="showing=!showing">{{player.name}}</a>
                            <div class="more-info" ng-show="showing">
                                <p ng-repeat="(key, val) in player"><strong>{{key}}</strong> : {{val}}</p>
                                <div class="change-room">
                                    <input type="text" ng-model="roomName">
                                    <button ng-click="updateRoom(player, roomName);">update</button>
                                </div>
                            </div>

                        </li>
                    </ul>
                </div>

                <div id="controls">
                    <button id="refresh" ng-click="refreshPlayers()">Refresh</button>
                    <button id="reset" ng-click="resetPlayers()">Reset</button>
                </div>

            </div>
        </div>

        <!-- ALL THE JS STUFF -->
        <script src="/socket.io/socket.io.js"></script>
        <script src="/static/js/lib/pixi/bin/pixi.js"></script>
        <script src="/static/js/lib/jquery.min.js"></script>
        <script src="/static/js/lib/angular.min.js"></script>
        

        <script src="/static/js/map/app.js"></script>
        <script src="/static/js/lib/vector2.js"></script>
        <script src="/static/js/map/services.js"></script>
        <script src="/static/js/map/game.js"></script>
        <script src="/static/js/map/moving_object.js"></script>
        <script src="/static/js/map/ball.js"></script>
        <script src="/static/js/map/wall.js"></script>
        <script src="/static/js/map/player.js"></script>
        <script src="/static/js/map/tile.js"></script>
        <script src="/static/js/map/controllers.js"></script>
    </body>
</html>
